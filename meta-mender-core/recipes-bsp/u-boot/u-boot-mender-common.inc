mender_create_fw_env_config_file() {
    # Takes one argument, which is the file to put it in.

    set -x

    # fw-utils seem to only be able to handle hex values.
    HEX_BOOTENV_SIZE="$(printf 0x%x "${BOOTENV_SIZE}")"

    # create fw_env.config file
    cat > $1 <<EOF
${MENDER_STORAGE_DEVICE} ${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_1} $HEX_BOOTENV_SIZE
${MENDER_STORAGE_DEVICE} ${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_2} $HEX_BOOTENV_SIZE
EOF
}

# UBI specific version of the fw_env.config file.
mender_create_fw_env_config_file_mender-ubi() {
    # Takes one argument, which is the file to put it in.

    set -x

    # fw-utils seem to only be able to handle hex values.
    HEX_BOOTENV_SIZE="$(printf 0x%x "${BOOTENV_SIZE}")"

    # For UBI we will not use the MENDER_STORAGE_DEVICE as the base device, but
    # rather /dev/mtd. We will need the mtdparts string to figure out exactly
    # where to put it.
    ${@mender_make_mtdparts_shell_array(d)}

    local index=0
    while [ $index -lt $mtd_count ]; do
        if eval test \$mtd_names_$index = u-boot-env; then
            break
        fi

        index=$(expr $index + 1)
    done

    if [ $index -eq $mtd_count ]; then
        bbfatal "\"u-boot-env\" partition not found in mtdparts string \"${MENDER_MTDPARTS}\". Cannot create fw_env.config file."
    fi

    # Offsets inside the fw_env.config file are relative to the start of the
    # mtd partition, whereas in U-Boot source it's relative to the start of the
    # whole mtd device. So subtract the difference here.
    eval local part_offset=\$mtd_offsets_$index
    # Get rid of hex-formatting.
    local offset1=$(printf %d ${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_1})
    local offset2=$(printf %d ${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_2})
    # Subtract partition offset.
    offset1=$(expr $offset1 - $part_offset || test $? -eq 1) # expr returns 1 if result is zero, but this result is valid
    offset2=$(expr $offset2 - $part_offset || test $? -eq 1)
    if [ $offset1 -lt 0 ] || [ $offset2 -lt 0 ]; then
        bbfatal "offset1 ($offset1) or offset2 ($offset2) less than zero. Should never happen!"
    fi
    # Reapply hex-formatting.
    offset1=$(printf 0x%x $offset1)
    offset2=$(printf 0x%x $offset2)

    # /dev/mtdX starts from 1, not 0.
    index=$(expr $index + 1)

    # create fw_env.config file
    cat > $1 <<EOF
/dev/mtd$index $offset1 $HEX_BOOTENV_SIZE
/dev/mtd$index $offset2 $HEX_BOOTENV_SIZE
EOF
}

# This should evaluate to the same as MENDER_STORAGE_RESERVED_RAW_SPACE.
# The only reason it's not evaluated the same way is that we don't have the
# necessary information (BOOTENV_SIZE and BOOTENV_RANGE) when evaluating
# MENDER_STORAGE_RESERVED_RAW_SPACE.
MENDER_BOOTENV_TOTAL_ALIGNED_SIZE = "${@mender_get_env_total_aligned_size(${BOOTENV_SIZE}, d.getVar('BOOTENV_RANGE') or None, ${MENDER_PARTITION_ALIGNMENT_KB})}"

def mender_get_env_offset(start_offset, index, total_aligned_size):
    if index == 1:
        return "0x%x" % int(start_offset)
    elif index == 2:
        return "0x%x" % int(start_offset + total_aligned_size / 2)
    else:
        raise Exception("env index out of range in mender_get_env_offset: Should not happen")

MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_1 ?= "${@mender_get_env_offset(${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET}, 1, \
                                                                      ${MENDER_BOOTENV_TOTAL_ALIGNED_SIZE})}"
MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET_2 ?= "${@mender_get_env_offset(${MENDER_UBOOT_ENV_STORAGE_DEVICE_OFFSET}, 2, \
                                                                      ${MENDER_BOOTENV_TOTAL_ALIGNED_SIZE})}"
